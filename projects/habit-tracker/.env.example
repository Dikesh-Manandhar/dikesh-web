# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Secret (generate a strong one: use `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`)
JWT_SECRET=your-secret-key-change-this

# CORS Origins (comma-separated, no spaces)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/habit_tracker

# Cookie Security (set to true when using HTTPS in production)
COOKIE_SECURE=false

# Production Example
# NODE_ENV=production
# DATABASE_URL=postgresql://username:password@prod-db-host:5432/habit_tracker
# ALLOWED_ORIGINS=https://yourdomain.com
# COOKIE_SECURE=true
